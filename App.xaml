<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AgendaApp"
             xmlns:vi="clr-namespace:AgendaApp.Views"
             x:Class="AgendaApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.MainPage>
        <Shell FlyoutBehavior="Flyout" FlyoutHeaderBehavior="Fixed" FlyoutVerticalScrollMode="Auto" BackgroundColor="Blue">
            <FlyoutItem Title="Listar Eventos">
                <ShellContent ContentTemplate="{DataTemplate vi:ListadoEventosViews}" />
            </FlyoutItem>
            <FlyoutItem Title="Nuevo Evento">
                <ShellContent ContentTemplate="{DataTemplate vi:EventoViews}"/>
            </FlyoutItem>
        </Shell>
    </Application.MainPage>


</Application>
