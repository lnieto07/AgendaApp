<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaApp.Views.ListadoEventosViews"
             xmlns:vm="clr-namespace:AgendaApp.ViewModels"
             xmlns:mo="clr-namespace:AgendaApp.Models"
             xmlns:te="clr-namespace:AgendaApp.Views.Template"
             Title="ListadoEventos">
    <VerticalStackLayout x:DataType="vm:ListadoEventosViewModels">
        <Button Command="{Binding ListarEventosCommand}" Text="Listar Eventos"/>
        <CollectionView ItemsSource="{Binding Eventos}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="mo:Evento">
                    <te:ItemsEventos/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>